# TYPE DATABASE USER CIDR-ADDRESS METHOD
# "local" is for Unix domain socket connections only
local all all {{ authentication_method }}
# IPv4 local connections:
host all all 127.0.0.1/32 {{ authentication_method }}
# IPv6 local connections:
host all all ::1/128 {{ authentication_method }}
# IPv4 zabbix server connections:
host all all {{ zabbix_server.ipaddr }}/32 {{ authentication_method }}
